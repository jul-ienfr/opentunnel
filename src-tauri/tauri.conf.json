{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/refs/heads/main/tauri.conf.json",
  "productName": "OpenTunnel",
  "version": "0.1.0",
  "identifier": "com.opentunnel.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OpenTunnel",
        "width": 640,
        "height": 520,
        "resizable": true,
        "minWidth": 480,
        "minHeight": 400,
        "theme": "Dark"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
